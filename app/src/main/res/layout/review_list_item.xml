<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_author"
                android:layout_width="@dimen/label_icon"
                android:layout_height="@dimen/label_icon"
                android:layout_marginStart="@dimen/text_body_padding"
                android:layout_marginEnd="@dimen/text_body_padding"
                android:contentDescription="@string/review_author_icon"
                android:src="@drawable/ic_baseline_rate_review_24" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/text_body_padding"
                android:paddingEnd="@dimen/text_body_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                tools:text="Author name" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/text_body_padding"
            android:paddingTop="@dimen/text_body_padding"
            android:paddingEnd="@dimen/text_body_padding"
            android:paddingBottom="@dimen/text_body_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            tools:text="review content" />

    </LinearLayout>
</layout>